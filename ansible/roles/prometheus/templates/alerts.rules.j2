# {{ ansible_managed }}
groups:
- name: default
  rules:
  - alert: InstanceDown
    # rtorrent can be flappy and needs a longer interval.
    expr: up{instance!~"nerr-3.*",job!="rtorrent"} == 0
    for: 2m
    labels:
      severity: critical
    annotations:
{% raw %}
      summary: "Instance {{ $labels.instance }} is down."
      description: "{{ $labels.instance }} of job {{ $labels.job }} has been down for more than 2 minutes."
{% endraw %}
  - alert: ServiceDown
    expr: probe_success{instance!~"nerr-3.*"} == 0
    for: 2m
    labels:
      severity: critical
    annotations:
{% raw %}
      summary: "Service {{ $labels.instance }} is down."
      description: "{{ $labels.instance }} of job {{ $labels.job }} has been down for more than 2 minutes."
{% endraw %}
  - alert: RtorrentDown
    # rtorrent can be flappy and needs a longer interval.
    expr: up{job="rtorrent"} == 0
    for: 5m
    labels:
      severity: critical
    annotations:
{% raw %}
      summary: "rTorrent {{ $labels.instance }} is down."
      description: "{{ $labels.instance }} rTorrent has been down for more than 5 minutes."
{% endraw %}
